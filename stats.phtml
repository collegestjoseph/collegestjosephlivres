<html>
  <head>
    <link type="text/css" rel="stylesheet" href="/stylesheets/main.css" />
    <title>
      Statistiques | Livres St-Joseph
    </title>

    <script type="text/javascript" src="https://www.google.com/jsapi"></script>
    <script type="text/javascript">
      google.load("visualization", "1", {packages:["corechart"]});
      google.setOnLoadCallback(drawChart);
      function drawChart() {
        var data = google.visualization.arrayToDataTable([
          ['Jour', 'Annonces', 'Ventes'],
          ['0',  05,   01],
          ['1',  20,   10],
          ['2',  50,   15],
          ['3',  10,   45]
        ]);

        var options = {
          title: 'Ventes de livres (exp√©rimental)'
        };

        var chart = new google.visualization.LineChart(document.getElementById('chart_div'));
        chart.draw(data, options);
      }
    </script>

  </head>
  <body>
  	{{ page_header }}
    <h3>
      Statistiques
    </h3>

    <table>
      <tr>
        <td>
        </td>
        <td align="center">
          En vente
        </td>
        <td align="center">
          Vendus
        </td>
        <td align="center">
          Effac&eacute;s
        </td>
      </tr>
      <tr>
        <td align="left">
          Nombre de livres
        </td>
        <td align="center">
          {{ bookstats.forsale_count }}
        </td>
        <td align="center">
          {{ bookstats.sold_count }}
        </td>
        <td align="center">
          {{ bookstats.deleted_count }}
        </td>
      </tr>
    </table>
    <p>
    <h3>Statistiques brutes</h3>
    <div>
        Grade,Prix,Date<br>
        {% for book in bookstats.sold %}
        {{ book.grade|escape }},{{ book.price|escape }},{{ book.date|date:"Y-m-d" }}<br>
        {% endfor %}
        {% for book in bookstats.sold_deleted %}
        {{ book.grade|escape }},{{ book.price|escape }},{{ book.dateCreated|date:"Y-m-d" }}<br>
        {% endfor %}
    </div>

    <!--
    <div id="chart_div" style="width: 900px; height: 500px;"></div>
    --<
		{{ page_footer }}
  </body>
</html>
